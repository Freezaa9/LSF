@model List<LSFDictionary.Models.Dictionary>
@{
    ViewBag.Title = "Trouver le bon mot signé";
}

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->

<header class="intro-header intro-header-img">
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>LSFSchool</h1>
                    <hr class="small">
                    <span class="subheading">Dictionnaire LSF</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="jumbotron">
    <center>
        @using (Html.BeginForm("FindLetters", "Dictionary", FormMethod.Post))
        {
            <div class="form-group searchWrapper">
                <div class="row">
                    <label class="sr-only" for="labelMotSaisi">Lettre à saisir</label>
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-search"></span></div>
                        @Html.TextBox("wts", null, new { id = "WordDictionary", @class = "form-control inputDictionaryIndex", placeholder = "Entrez un mot à signer !" })
                        <span class="input-group-btn"><input type="submit" value="Launch" class="btn btn-success launchButton" /></span>
                    </div>
                </div>
            </div>
        }
    </center>
    <br />
    <div class="listedWordsTab">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle alphaDropDown">A<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">A</a></li>
                            <li><a href="#">B</a></li>
                            <li><a href="#">C</a></li>
                            <li><a href="#">D</a></li>
                            <li><a href="#">E</a></li>
                            <li><a href="#">F</a></li>
                            <li><a href="#">G</a></li>
                            <li><a href="#">H</a></li>
                            <li><a href="#">I</a></li>
                            <li><a href="#">J</a></li>
                            <li><a href="#">K</a></li>
                            <li><a href="#">L</a></li>
                            <li><a href="#">M</a></li>
                            <li><a href="#">N</a></li>
                            <li><a href="#">O</a></li>
                            <li><a href="#">P</a></li>
                            <li><a href="#">Q</a></li>
                            <li><a href="#">R</a></li>
                            <li><a href="#">S</a></li>
                            <li><a href="#">T</a></li>
                            <li><a href="#">U</a></li>
                            <li><a href="#">V</a></li>
                            <li><a href="#">W</a></li>
                            <li><a href="#">X</a></li>
                            <li><a href="#">Y</a></li>
                            <li><a href="#">Z</a></li>
                        </ul>
                    </th>
                    <th style="text-align: center;">Définition</th>
                    <th style="text-align: center;">Vidéo</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td></td>
                            <td style="text-align: center;">
                                @Model[i].Key
                                <br />
                                <i>"Ici mettre une belle et longue description"</i>
                            </td>
                            <td>
                                <div class="video-mask">
                                    <center>
                                        <video width="400" controls>
                                            <source src="@Model[i].Value" type="video/mp4">
                                        </video>
                                    </center>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>